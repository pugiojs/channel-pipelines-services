{
    "name": "@pugiojs/pugio-restful-api",
    "private": true,
    "version": "0.0.1",
    "description": "Pugio back-end API services",
    "author": "lenconda <i@lenconda.top>",
    "homepage": "https://pugio.lenconda.top",
    "bugs": {
        "url": "https://github.com/pugiojs/pugio-restful-api/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/pugiojs/pugio-restful-api.git"
    },
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "tslint -p tsconfig.json -c tslint.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@fusionauth/typescript-client": "^1.32.1",
        "@nestjs/common": "^7.6.13",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.6.13",
        "@nestjs/passport": "^7.1.0",
        "@nestjs/platform-express": "^7.6.5",
        "@nestjs/platform-socket.io": "^7.6.18",
        "@nestjs/typeorm": "^7.1.5",
        "@nestjs/websockets": "^7.6.18",
        "axios": "^0.24.0",
        "jsonwebtoken": "^8.5.1",
        "jwks-rsa": "^2.0.0",
        "lodash": "^4.17.21",
        "mysql": "^2.18.1",
        "passport": "^0.4.1",
        "passport-headerapikey": "^1.2.2",
        "passport-jwt": "^4.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "typeorm": "^0.2.29"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.5.4",
        "@nestjs/schematics": "^7.2.6",
        "@nestjs/testing": "^7.0.0",
        "@types/auth0": "^2.34.7",
        "@types/axios": "^0.14.0",
        "@types/express": "^4.17.7",
        "@types/jest": "^26.0.10",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/lodash": "^4.14.177",
        "@types/node": "^14.6.0",
        "@types/passport-jwt": "^3.0.3",
        "@types/socket.io": "^2.1.13",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "eslint": "^7.20.0",
        "eslint-config-alloy": "^4.4.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^25.5.4",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^25.5.1",
        "ts-loader": "^8.0.14",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^6.1.3",
        "typescript": "^3.9.7"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
